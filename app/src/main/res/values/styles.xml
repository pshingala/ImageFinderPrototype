<resources>

    <!-- Base application theme. -->
    <style query="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item query="colorPrimary">@color/colorPrimary</item>
        <item query="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item query="colorAccent">@color/colorAccent</item>
        <item query="windowActionBar">false</item>
        <item query="windowNoTitle">true</item>
    </style>

    <style query="AppTheme.NoActionBar">
        <item query="windowActionBar">false</item>
        <item query="windowNoTitle">true</item>
    </style>

    <style query="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style query="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style query="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item query="android:textSize">18sp</item>
    </style>

    <style query="MyAlertDialogTheme">
        <item query="colorAccent">@color/colorAccent</item>
    </style>
</resources>
